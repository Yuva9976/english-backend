      "topics": [
        {
          "id": "verbs",
          "title": "Verbs",
          "icon": "üèÉ",
          "subtitle": "Action and State Verbs",
          "description": "Verbs express actions (run, write) or states (be, have, know)",
          "content": {
            "definition": "A verb is a word that expresses an action, occurrence, or state of being.",
            "types": [
              {
                "name": "Action Verbs",
                "explanation": "Express physical or mental actions",
                "examples": ["run", "jump", "think", "believe", "write", "study"]
              },
              {
                "name": "State Verbs",
                "explanation": "Express states, feelings, or conditions (not actions)",
                "examples": ["be", "have", "know", "love", "understand", "belong"]
              },
              {
                "name": "Transitive Verbs",
                "explanation": "Require an object to complete their meaning",
                "examples": ["She bought a car", "He reads books", "They love pizza"]
              },
              {
                "name": "Intransitive Verbs",
                "explanation": "Don't need an object",
                "examples": ["Birds fly", "She laughed", "The sun rises"]
              }
            ],
            "rules": [
              "Verbs change form based on tense (present, past, future)",
              "Verbs must agree with their subject in number (singular/plural)",
              "State verbs are rarely used in continuous tenses"
            ]
          },
          "exercises": [
            {
              "type": "identify",
              "question": "Identify the verb in each sentence:",
              "items": [
                {
                  "sentence": "The cat sleeps on the couch.",
                  "answer": "sleeps",
                  "explanation": "'Sleeps' is the action verb showing what the cat does."
                },
                {
                  "sentence": "She knows the answer.",
                  "answer": "knows",
                  "explanation": "'Knows' is a state verb expressing knowledge."
                },
                {
                  "sentence": "They are playing football.",
                  "answer": "are playing",
                  "explanation": "'Are playing' is the complete verb phrase (auxiliary + main verb)."
                }
              ]
            },
            {
              "type": "fill-blank",
              "question": "Complete the sentences with the correct verb form:",
              "items": [
                {
                  "sentence": "She ___ (go) to school every day.",
                  "answer": "goes",
                  "options": ["go", "goes", "going", "gone"],
                  "explanation": "Use 'goes' for third person singular in present simple."
                },
                {
                  "sentence": "We ___ (have) dinner at 7pm yesterday.",
                  "answer": "had",
                  "options": ["have", "has", "had", "having"],
                  "explanation": "'Had' is the past tense of 'have'."
                },
                {
                  "sentence": "They ___ (study) right now.",
                  "answer": "are studying",
                  "options": ["study", "studies", "are studying", "studied"],
                  "explanation": "Use present continuous (are + verb+ing) for actions happening now."
                }
              ]
            }
          ]
        },
        {
          "id": "nouns",
          "title": "Nouns",
          "icon": "üè†",
          "subtitle": "People, Places, and Things",
          "description": "Nouns name people (John), places (London), things (book), or ideas (love)",
          "content": {
            "definition": "A noun is a word that names a person, place, thing, or idea.",
            "types": [
              {
                "name": "Common Nouns",
                "explanation": "General names for things",
                "examples": ["dog", "city", "teacher", "book", "car", "happiness"]
              },
              {
                "name": "Proper Nouns",
                "explanation": "Specific names (always capitalized)",
                "examples": ["London", "Sarah", "Monday", "English", "December", "Tesla"]
              },
              {
                "name": "Countable Nouns",
                "explanation": "Can be counted (have singular and plural forms)",
                "examples": ["one apple/two apples", "a car/three cars", "one child/many children"]
              },
              {
                "name": "Uncountable Nouns",
                "explanation": "Cannot be counted (no plural form)",
                "examples": ["water", "rice", "information", "advice", "furniture", "music"]
              },
              {
                "name": "Collective Nouns",
                "explanation": "Groups of people or things",
                "examples": ["team", "family", "class", "audience", "staff", "committee"]
              }
            ],
            "rules": [
              "Plural nouns usually add -s or -es (book ‚Üí books, box ‚Üí boxes)",
              "Some nouns have irregular plurals (child ‚Üí children, man ‚Üí men)",
              "Uncountable nouns use singular verbs (The water is cold)",
              "Proper nouns always start with a capital letter"
            ]
          },
          "exercises": [
            {
              "type": "classify",
              "question": "Classify these nouns as countable or uncountable:",
              "items": [
                {
                  "word": "apple",
                  "answer": "countable",
                  "explanation": "You can count apples: one apple, two apples."
                },
                {
                  "word": "water",
                  "answer": "uncountable",
                  "explanation": "Water cannot be counted. Use: some water, a glass of water."
                },
                {
                  "word": "furniture",
                  "answer": "uncountable",
                  "explanation": "Furniture is always uncountable. Say: a piece of furniture."
                },
                {
                  "word": "book",
                  "answer": "countable",
                  "explanation": "Books can be counted: one book, five books."
                }
              ]
            },
            {
              "type": "plural",
              "question": "Write the plural form:",
              "items": [
                {"singular": "child", "answer": "children", "explanation": "Irregular plural"},
                {"singular": "box", "answer": "boxes", "explanation": "Add -es after x"},
                {"singular": "lady", "answer": "ladies", "explanation": "Change y to i and add -es"},
                {"singular": "tooth", "answer": "teeth", "explanation": "Irregular plural"}
              ]
            }
          ]
        },
        {
          "id": "adjectives",
          "title": "Adjectives",
          "icon": "üé®",
          "subtitle": "Describing Words",
          "description": "Adjectives describe or modify nouns (beautiful, large, happy)",
          "content": {
            "definition": "An adjective is a word that describes or gives more information about a noun.",
            "types": [
              {
                "name": "Descriptive Adjectives",
                "explanation": "Describe qualities or characteristics",
                "examples": ["beautiful", "tall", "intelligent", "red", "old", "expensive"]
              },
              {
                "name": "Comparative Adjectives",
                "explanation": "Compare two things",
                "examples": ["bigger", "more beautiful", "better", "faster", "happier"]
              },
              {
                "name": "Superlative Adjectives",
                "explanation": "Show the highest degree (comparing 3+ things)",
                "examples": ["biggest", "most beautiful", "best", "fastest", "happiest"]
              }
            ],
            "rules": [
              "Adjectives usually come before nouns: a red car",
              "Short adjectives add -er/-est: big ‚Üí bigger ‚Üí biggest",
              "Long adjectives use more/most: beautiful ‚Üí more beautiful ‚Üí most beautiful",
              "Some adjectives are irregular: good ‚Üí better ‚Üí best"
            ]
          },
          "exercises": [
            {
              "type": "comparative",
              "question": "Write the comparative and superlative forms:",
              "items": [
                {
                  "base": "tall",
                  "comparative": "taller",
                  "superlative": "tallest",
                  "explanation": "Add -er/-est to short adjectives"
                },
                {
                  "base": "expensive",
                  "comparative": "more expensive",
                  "superlative": "most expensive",
                  "explanation": "Use more/most with long adjectives"
                },
                {
                  "base": "good",
                  "comparative": "better",
                  "superlative": "best",
                  "explanation": "Irregular adjective"
                }
              ]
            }
          ]
        },
        {
          "id": "adverbs",
          "title": "Adverbs",
          "icon": "‚ö°",
          "subtitle": "Modifying Verbs, Adjectives, and Other Adverbs",
          "description": "Adverbs tell us how, when, where, or how often something happens",
          "content": {
            "definition": "An adverb modifies verbs, adjectives, or other adverbs.",
            "types": [
              {
                "name": "Manner (How?)",
                "examples": ["quickly", "carefully", "well", "badly", "loudly"]
              },
              {
                "name": "Time (When?)",
                "examples": ["now", "yesterday", "soon", "already", "still"]
              },
              {
                "name": "Place (Where?)",
                "examples": ["here", "there", "everywhere", "outside", "upstairs"]
              },
              {
                "name": "Frequency (How often?)",
                "examples": ["always", "usually", "often", "sometimes", "never"]
              }
            ],
            "rules": [
              "Many adverbs end in -ly: quick ‚Üí quickly",
              "Some adverbs don't change: fast, hard, late",
              "Adverbs of frequency go before the main verb but after 'be'",
              "Well is the adverb form of good"
            ]
          }
        },
        {
          "id": "pronouns",
          "title": "Pronouns",
          "icon": "üë§",
          "subtitle": "Words That Replace Nouns",
          "description": "Pronouns replace nouns to avoid repetition (I, you, he, she, it, we, they)",
          "content": {
            "definition": "A pronoun is a word that replaces a noun.",
            "types": [
              {
                "name": "Subject Pronouns",
                "examples": ["I", "you", "he", "she", "it", "we", "they"],
                "usage": "Used as the subject of a sentence"
              },
              {
                "name": "Object Pronouns",
                "examples": ["me", "you", "him", "her", "it", "us", "them"],
                "usage": "Used as the object of a verb or preposition"
              },
              {
                "name": "Possessive Pronouns",
                "examples": ["mine", "yours", "his", "hers", "its", "ours", "theirs"],
                "usage": "Show ownership (without a noun after)"
              },
              {
                "name": "Possessive Adjectives",
                "examples": ["my", "your", "his", "her", "its", "our", "their"],
                "usage": "Show ownership (with a noun after)"
              }
            ]
          }
        },
        {
          "id": "prepositions",
          "title": "Prepositions",
          "icon": "üìç",
          "subtitle": "Words Showing Relationships",
          "description": "Prepositions show relationships in time, place, or direction",
          "content": {
            "definition": "A preposition shows the relationship between a noun/pronoun and other words.",
            "categories": [
              {
                "name": "Time Prepositions",
                "examples": ["at 5pm", "on Monday", "in January", "during the meeting", "before lunch", "after work"]
              },
              {
                "name": "Place Prepositions",
                "examples": ["at home", "on the table", "in the box", "under the bed", "above the door", "between"]
              },
              {
                "name": "Direction Prepositions",
                "examples": ["to school", "from London", "into the room", "out of the car", "through the park"]
              }
            ],
            "rules": [
              "Use AT with specific times and places: at 3pm, at the station",
              "Use ON with days and dates: on Monday, on May 5th",
              "Use IN with months, years, and enclosed spaces: in May, in 2024, in the room"
            ]
          }
        }
      ]
    },
