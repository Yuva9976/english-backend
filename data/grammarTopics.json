          "content": {
            "types": [
              {
                "name": "Declarative (Statement)",
                "purpose": "Makes a statement or expresses an opinion",
                "examples": ["I love English.", "The sky is blue.", "She works in London."]
              },
              {
                "name": "Interrogative (Question)",
                "purpose": "Asks a question",
                "examples": ["Do you like pizza?", "Where is the station?", "What time is it?"]
              },
              {
                "name": "Imperative (Command)",
                "purpose": "Gives a command, request, or instruction",
                "examples": ["Close the door.", "Please sit down.", "Don't run!"]
              },
              {
                "name": "Exclamatory",
                "purpose": "Expresses strong emotion",
